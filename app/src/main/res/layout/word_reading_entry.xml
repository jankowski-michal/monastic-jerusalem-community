<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Reading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reading_from"
            style="@style/Text.Section.Reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reading_title"
            style="@style/Text.Section.Reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reading_content"
            style="@style/Text.Section.Reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Text.Section.Reading"
            android:textSize="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word.today.reading"/>


        <!--Lista dzisiejszych czytań pochodzi z opoka.org.pl</small><br><small>Treść czytań pochodzi z wbiblii.pl</small>-->

    </LinearLayout>

</android.support.v7.widget.CardView>